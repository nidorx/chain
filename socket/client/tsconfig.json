{
    "compilerOptions": {
        "target": "esnext",
        "module": "ESNext",
        "removeComments": true,
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "*.ts"
    ],
}